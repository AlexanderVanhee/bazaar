<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="BzAppTile" parent="AdwBin">
    <property name="css-name">entry</property>
    <property name="child">
      <object class="GtkBox">
        <property name="margin-top">10</property>
        <property name="margin-bottom">10</property>
        <property name="margin-start">10</property>
        <property name="margin-end">10</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">15</property>
        <child>
          <object class="GtkImage">
            <property name="pixel-size">64</property>
            <binding name="paintable">
              <lookup name="icon-paintable" type="BzEntry">
                <lookup name="ui-entry" type="BzEntryGroup">
                  <lookup name="group">BzAppTile</lookup>
                </lookup>
              </lookup>
            </binding>
            <binding name="visible">
              <closure function="invert_boolean" type="gboolean">
                <closure function="is_null" type="gboolean">
                  <lookup name="icon-paintable" type="BzEntry">
                    <lookup name="ui-entry" type="BzEntryGroup">
                      <lookup name="group">BzAppTile</lookup>
                    </lookup>
                  </lookup>
                </closure>
              </closure>
            </binding>
          </object>
        </child>
        <child>
          <object class="GtkImage">
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="width-request">64</property>
            <property name="height-request">64</property>
            <property name="pixel-size">64</property>
            <property name="icon-name">image-missing-symbolic</property>
            <binding name="visible">
              <closure function="is_null" type="gboolean">
                <lookup name="icon-paintable" type="BzEntry">
                  <lookup name="ui-entry" type="BzEntryGroup">
                    <lookup name="group">BzAppTile</lookup>
                  </lookup>
                </lookup>
              </closure>
            </binding>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="valign">center</property>
            <property name="hexpand">TRUE</property>
            <property name="orientation">vertical</property>
            <property name="spacing">5</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <child>
                  <object class="GtkLabel">
                    <style>
                      <class name="title-2"/>
                    </style>
                    <property name="xalign">0.0</property>
                    <property name="ellipsize">end</property>
                    <binding name="label">
                      <lookup name="title" type="BzEntry">
                        <lookup name="ui-entry" type="BzEntryGroup">
                          <lookup name="group">BzAppTile</lookup>
                        </lookup>
                      </lookup>
                    </binding>
                  </object>
                </child>
                <child>
                  <object class="GtkRevealer">
                    <property name="transition-type">crossfade</property>
                    <binding name="reveal-child">
                      <lookup name="verified" type="BzEntry">
                        <lookup name="ui-entry" type="BzEntryGroup">
                          <lookup name="group">BzAppTile</lookup>
                        </lookup>
                      </lookup>
                    </binding>
                    <binding name="visible">
                      <lookup name="verified" type="BzEntry">
                        <lookup name="ui-entry" type="BzEntryGroup">
                          <lookup name="group">BzAppTile</lookup>
                        </lookup>
                      </lookup>
                    </binding>
                    <property name="child">
                      <object class="GtkImage">
                        <style>
                          <class name="accent"/>
                        </style>
                        <property name="has-tooltip">TRUE</property>
                        <property name="tooltip-text" translatable="yes">This flatpak is verified by the original developers of the software.</property>
                        <property name="icon-name">verified-checkmark-symbolic</property>
                        <property name="icon-size">normal</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <style>
                  <class name="heading"/>
                  <class name="dimmed"/>
                </style>
                <property name="xalign">0.0</property>
                <property name="wrap">TRUE</property>
                <property name="ellipsize">end</property>
                <property name="max-width-chars">35</property>
                <property name="lines">3</property>
                <binding name="label">
                  <lookup name="description" type="BzEntry">
                    <lookup name="ui-entry" type="BzEntryGroup">
                      <lookup name="group">BzAppTile</lookup>
                    </lookup>
                  </lookup>
                </binding>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
